<html>
  <head>
    <meta name="generator" content="HTML Tidy, see www.w3.org">
    <title></title>
    <link rel="stylesheet" type="text/css" href="n/gw.css">
    <meta http-equiv="content-type" content=
    "text/html; charset=ISO-8859-1">
  </head>

  <body text="#FFFFFF">
    <center>
      <br>

    {include file="res_bar.thtml"}
    <br>
       

      <form action="verteidigung.php5" method="post">
        <table width="519">
          <tr>
            <td class="c" colspan="2" align="center">Verteidigung</td>
          </tr>
{foreach from=$shiplist item=ship}
          <tr>
	   {assign var="id" value=$ship.id}
            <td class="l"><a href="infos.php&v={$ship.id}">{$ship.name}</a>{if $orbitlist!=-1}{if $orbitlist.$id} ({$orbitlist.$id.count} vorhanden){/if}{/if}<br>
            {$ship.desc}<br>
            Ben&ouml;tigt: {$ship.res_need} Dauer: <b>{$ship.str_time}</b></td>

            <td class="k"><input type="text" name="p{$ship.id}" size="6"
            maxlength="6" value="0" tabindex="1"></td>
          </tr>
{/foreach}
          <tr>
           <td class="c" colspan="2" align="center">
            <input type="submit" value="Absenden">
           </td>
          </tr>
        </table>
      </form>
      <br>
{if $buildlist != -1}
      <table width="519">
        <tr><td class="c" colspan="3">In Produktion</td></tr>
        <tr><td>Turm</td><td>Status</td><td></td></tr>
  {foreach from=$buildlist item=ship}
  <tr><td>{$ship.count} {if $ship.count<=1}Turm{else}T&uuml;rme{/if} "{$ship.name}"</td>
      <td>
      {if $ship.status==0}
      In Warteschleife. Restzeit: {$ship.str_resttime}
      {elseif $ship.status==1}
      In Produktion. Restzeit: <div name="bx" class="z">{$ship.str_resttime}</div>
      {/if}
      </td>
      <td>
      <a href="verteidigung.php5?a=del&id={$ship.taskid}">Abbrechen</a>
      <a href="verteidigung.php5?a=down&id={$ship.taskid}">Prioritaet erniedrigen</a>
      </td>
      </tr>
  {/foreach}
      
    
      <tr><th colspan="3">Restdauer gesamt: {$build.rest}</th></tr>
      </table>
{/if}
    </center>
  </body>
</html>

